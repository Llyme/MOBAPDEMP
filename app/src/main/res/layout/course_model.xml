<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<Button
		android:id="@+id/course_model_add"
		android:layout_width="44dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:backgroundTint="#0F9F3F"
		android:text="+"
		android:textColor="#ffffff"
		android:textSize="20dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/course_model_id"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="4dp"
		android:textColor="#000000"
		android:textSize="16sp"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="@+id/course_model_add"
		app:layout_constraintStart_toEndOf="@+id/course_model_add"
		app:layout_constraintTop_toTopOf="@+id/course_model_add" />

	<TextView
		android:id="@+id/course_model_section"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="4dp"
		android:textColor="#000000"
		android:textSize="14sp"
		app:layout_constraintBottom_toBottomOf="@+id/course_model_id"
		app:layout_constraintStart_toEndOf="@+id/course_model_id"
		app:layout_constraintTop_toTopOf="@+id/course_model_id" />

	<TextView
		android:id="@+id/course_model_room"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="4dp"
		android:textColor="#000000"
		android:textSize="14sp"
		app:layout_constraintBottom_toBottomOf="@+id/course_model_section"
		app:layout_constraintStart_toEndOf="@+id/course_model_section"
		app:layout_constraintTop_toTopOf="@+id/course_model_section" />

	<LinearLayout
		android:id="@+id/course_model_days"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="4dp"
		android:orientation="vertical"
		app:layout_constraintBottom_toBottomOf="@+id/course_model_room"
		app:layout_constraintEnd_toStartOf="@+id/course_model_info"
		app:layout_constraintTop_toTopOf="@+id/course_model_room">

	</LinearLayout>

	<Button
		android:id="@+id/course_model_info"
		android:layout_width="44dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="8dp"
		android:text="\?"
		android:textSize="20dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>