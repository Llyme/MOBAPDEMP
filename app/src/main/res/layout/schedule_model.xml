<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<Button
		android:id="@+id/schedule_model_load"
		android:layout_width="44dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:backgroundTint="@color/green"
		android:textColor="#FFFFFF"
		android:textSize="20sp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/schedule_model_name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginEnd="8dp"
		android:textColor="#000000"
		app:layout_constraintBottom_toBottomOf="@+id/schedule_model_load"
		app:layout_constraintEnd_toStartOf="@+id/schedule_model_delete"
		app:layout_constraintStart_toEndOf="@+id/schedule_model_load"
		app:layout_constraintTop_toTopOf="@+id/schedule_model_load" />

	<Button
		android:id="@+id/schedule_model_delete"
		android:layout_width="44dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="8dp"
		android:backgroundTint="@color/red"
		android:text="X"
		android:textColor="#FFFFFF"
		android:textSize="20sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>